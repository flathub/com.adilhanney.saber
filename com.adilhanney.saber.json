{
	"app-id": "com.adilhanney.saber",
	"runtime": "org.gnome.Platform",
	"runtime-version": "48",
	"sdk": "org.gnome.Sdk",
	"command": "saber",
	"separate-locales": false,
	"finish-args": [
		"--share=network",
		"--share=ipc",
		"--socket=fallback-x11",
		"--socket=wayland",
		"--device=dri",
		"--filesystem=xdg-documents/Saber:create"
	],
	"modules": [
		"shared-modules/libsecret/libsecret.json",
		{
			"name": "libjsoncpp",
			"buildsystem": "meson",
			"config-opts": [
				"--buildtype=release",
				"--default-library=shared"
			],
			"sources": [
				{
					"type": "archive",
					"url": "https://github.com/open-source-parsers/jsoncpp/archive/refs/tags/1.9.6.tar.gz",
					"sha256": "f93b6dd7ce796b13d02c108bc9f79812245a82e577581c4c9aabe57075c90ea2",
					"x-checker-data": {
						"type": "json",
						"url": "https://api.github.com/repos/open-source-parsers/jsoncpp/releases/latest",
						"version-query": ".tag_name",
						"url-query": ".tag_name | \"https://github.com/open-source-parsers/jsoncpp/archive/refs/tags/\" + . + \".tar.gz\"",
						"is-main-source": false
					}
				}
			]
		},
		{
			"name": "zenity",
			"buildsystem": "meson",
			"config-opts": [
				"--buildtype=release"
			],
			"sources": [
				{
					"type": "git",
					"url": "https://gitlab.gnome.org/GNOME/zenity",
					"commit": "54c0b49e5d56de276bad1a2280b7fba500b05e97",
					"tag": "4.2.1",
					"x-checker-data": {
						"type": "git",
						"tag-pattern": "^([\\d.]+)$"
					}
				}
			]
		},
		{
			"name": "saber",
			"buildsystem": "simple",
			"build-commands": [
				"mkdir -p /app",
				"tar -xf Saber_*.tar.gz -C /app",
				"mkdir -p /app/bin",
				"ln -s /app/saber /app/bin/saber"
			],
			"sources": [
				{
					"type": "file",
					"url": "https://github.com/saber-notes/saber/releases/download/v1.29.0/Saber_v1.29.0_Linux_x86_64.tar.gz",
					"sha256": "e934a4032642f6c1241fc40e89cd358babb9bcb8734f7f984dcdc45d185f7b42",
					"only-arches": [
						"x86_64"
					],
					"x-checker-data": {
						"type": "json",
						"url": "https://api.github.com/repos/saber-notes/saber/releases/latest",
						"version-query": ".tag_name",
						"url-query": ".assets[] | select(.name==\"Saber_\" + $version + \"_Linux_x86_64.tar.gz\") | .browser_download_url",
						"is-main-source": true
					}
				},
				{
					"type": "file",
					"url": "https://github.com/saber-notes/saber/releases/download/v1.29.0/Saber_v1.29.0_Linux_arm64.tar.gz",
					"sha256": "aec170e615e20486fde0567a4001a5e1b8a42e81401894f668496dff6eefbfd2",
					"only-arches": [
						"aarch64"
					],
					"x-checker-data": {
						"type": "json",
						"url": "https://api.github.com/repos/saber-notes/saber/releases/latest",
						"version-query": ".tag_name",
						"url-query": ".assets[] | select(.name==\"Saber_\" + $version + \"_Linux_arm64.tar.gz\") | .browser_download_url",
						"is-main-source": true
					}
				}
			]
		}
	]
}
