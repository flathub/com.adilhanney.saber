{
	"app-id": "com.adilhanney.saber",
	"runtime": "org.freedesktop.Platform",
	"runtime-version": "22.08",
	"sdk": "org.freedesktop.Sdk",
	"command": "saber",
	"separate-locales": false,
	"finish-args": [
		"--share=network",
		"--share=ipc",
		"--socket=fallback-x11",
		"--socket=wayland",
		"--device=dri",
		"--socket=pulseaudio",
		"--filesystem=xdg-documents/Saber:create"
	],
	"modules": [
		"shared-modules/libsecret/libsecret.json",
		{
			"name": "libjsoncpp",
			"buildsystem": "meson",
			"config-opts": [
				"--buildtype=release",
				"--default-library=shared"
			],
			"sources": [
				{
					"type": "archive",
					"url": "https://github.com/open-source-parsers/jsoncpp/archive/refs/tags/1.9.5.tar.gz",
					"sha256": "f409856e5920c18d0c2fb85276e24ee607d2a09b5e7d5f0a371368903c275da2"
				}
			]
		},
		{
			"name": "saber",
			"buildsystem": "simple",
			"build-commands": [
				"mkdir -p Saber",
				"tar -xf Saber_*.tar.gz -C Saber",

				"cp -r Saber /app/",
				"chmod +x /app/Saber/saber",
				"mkdir -p /app/bin",
				"ln -s /app/Saber/saber /app/bin/saber",
				"ln -s /app/Saber/lib/* /app/lib/",

				"install -Dm644 com.adilhanney.saber.metainfo.xml -t /app/share/metainfo/",
				"install -Dm644 icon-512x512.png /app/share/icons/hicolor/512x512/apps/com.adilhanney.saber.png",
				"install -Dm644 com.adilhanney.saber.desktop -t /app/share/applications/"
			],
			"sources": [
				{
					"type": "file",
					"url": "https://raw.githubusercontent.com/adil192/saber/v0.14.11/flatpak/com.adilhanney.saber.metainfo.xml",
					"sha256": "2767db1c1f8fabfc35dcc18b8ae47106d27d381676d6674d4af22311a8ef6714",
					"x-checker-data": {
					  "type": "json",
					  "url": "https://api.github.com/repos/adil192/saber/releases/latest",
					  "version-query": ".tag_name",
					  "url-query": "$version | \"https://raw.githubusercontent.com/adil192/saber/\" + $version + \"/flatpak/com.adilhanney.saber.metainfo.xml\""
					}
				},
				{
					"type": "file",
					"url": "https://raw.githubusercontent.com/adil192/saber/v0.3.0/flatpak/com.adilhanney.saber.desktop",
					"sha256": "4725f03a3eee316e4fb79c64ff36c28c80ca104ed7edc1bb3b2ad8e6021a1c79",
					"x-checker-data": {
					  "type": "json",
