{
	"app-id": "com.adilhanney.saber",
	"runtime": "org.gnome.Platform",
	"runtime-version": "48",
	"sdk": "org.gnome.Sdk",
	"command": "saber",
	"separate-locales": false,
	"finish-args": [
		"--share=network",
		"--share=ipc",
		"--socket=fallback-x11",
		"--socket=wayland",
		"--device=dri",
		"--socket=pulseaudio",
		"--filesystem=xdg-documents/Saber:create"
	],
	"modules": [
		"shared-modules/libsecret/libsecret.json",
		{
			"name": "libjsoncpp",
			"buildsystem": "meson",
			"config-opts": [
				"--buildtype=release",
				"--default-library=shared"
			],
			"sources": [
				{
					"type": "archive",
					"url": "https://github.com/open-source-parsers/jsoncpp/archive/refs/tags/1.9.6.tar.gz",
					"sha256": "f93b6dd7ce796b13d02c108bc9f79812245a82e577581c4c9aabe57075c90ea2",
					"x-checker-data": {
						"type": "json",
						"url": "https://api.github.com/repos/open-source-parsers/jsoncpp/releases/latest",
						"version-query": ".tag_name",
						"url-query": ".tag_name | \"https://github.com/open-source-parsers/jsoncpp/archive/refs/tags/\" + . + \".tar.gz\"",
						"is-main-source": false
					}
				}
			]
		},
		{
			"name": "zenity",
			"buildsystem": "meson",
			"config-opts": [
				"--buildtype=release"
			],
			"sources": [
				{
					"type": "git",
					"url": "https://gitlab.gnome.org/GNOME/zenity",
					"commit": "12b561a47e9becb62a2c26c23ec2b3a6709e6024",
					"tag": "4.2.0",
					"x-checker-data": {
						"type": "git",
						"tag-pattern": "^([\\d.]+)$"
					}
				}
			]
		},
		{
			"name": "saber",
			"buildsystem": "simple",
			"build-commands": [
				"mkdir -p /app",
				"tar -xf Saber_*.tar.gz -C /app",
				"mkdir -p /app/bin",
				"ln -s /app/saber /app/bin/saber"
			],
			"sources": [
				{
					"type": "file",
					"url": "https://github.com/saber-notes/saber/releases/download/v0.26.10/Saber_v0.26.10_Linux_x86_64.tar.gz",
					"sha256": "4f466efa7c12c9b179078965d74d465cfc85cc63553d7d61d1115543242f2d38",
					"only-arches": [
						"x86_64"
					],
					"x-checker-data": {
						"type": "json",
						"url": "https://api.github.com/repos/saber-notes/saber/releases/latest",
						"version-query": ".tag_name",
						"url-query": ".assets[] | select(.name==\"Saber_\" + $version + \"_Linux_x86_64.tar.gz\") | .browser_download_url",
						"is-main-source": true
					}
				},
				{
					"type": "file",
					"url": "https://github.com/saber-notes/saber/releases/download/v0.26.10/Saber_v0.26.10_Linux_arm64.tar.gz",
					"sha256": "2d48ef9306668d8d47552620626c77932f27ec9b89d8798bd806e0038df2ab00",
					"only-arches": [
						"aarch64"
					],
					"x-checker-data": {
						"type": "json",
						"url": "https://api.github.com/repos/saber-notes/saber/releases/latest",
						"version-query": ".tag_name",
						"url-query": ".assets[] | select(.name==\"Saber_\" + $version + \"_Linux_arm64.tar.gz\") | .browser_download_url",
						"is-main-source": true
					}
				}
			]
		}
	]
}
